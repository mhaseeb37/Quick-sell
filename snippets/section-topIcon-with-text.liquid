{% comment %}
/**
* ----------------------------------------------------------------------------------------------
* Settings
* ----------------------------------------------------------------------------------------------
*/
{% endcomment %}

<div class="topIcon-text">
    <div class="container">
        <div class="row">
            <div class="col-md-12 section-heading">
                <h2>{{ section.settings.section_heading }}</h2>
            </div>
        </div>
    </div>
  <div class="col-md-12 icontextCol">
    <div class="container">
                <div class="row">
                  {% for block in section.blocks%}
                    <div class="col-md-4 iconTextBox">
                        <img src="{{ block.settings.icon_image | img_url: '1296x' }}" data-src="{{ img_url }}" data-widths="[540, 720, 900, 1080, 1296, 1512, 1728, 1944, 2048, 4472]" data-aspectratio="{{ block.settings.image.aspect_ratio }}" data-sizes="auto" data-parent-fit="cover" alt="{{ var_image_alt }}">
                        <h3>{{ block.settings.icon_heading}}</h3>
                        <p>{{ block.settings.icon_description }}</p>
                    </div>
                  {% endfor %}
                </div>
            </div>
  </div>
</div>
<style>
  .topIcon-text{
    padding:75px 0px;
  }
  .section-heading{
    margin-bottom:50px;
  }
  .icontextCol{
    padding:75px 0px;
    background: #3a4c5b;
  }
  .iconTextBox{
    text-align:center;
  }
</style>